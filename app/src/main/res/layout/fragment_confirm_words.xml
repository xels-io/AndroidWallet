<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        android:id="@+id/linearLayout"
        android:clickable="true"
        android:focusable="true">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar">
        />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
        >

            <TextView
                    android:id="@+id/text_screen_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/confirm_words"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
            />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top_large"
    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:background="@color/whiteColor"
                      android:id="@+id/container">

            <TextView
                    android:id="@+id/tv_first_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_marginBottom="@dimen/layout_margin_small"
                    android:paddingLeft="@dimen/padding_left"
            />

            <EditText
                    android:id="@+id/et_word_no_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/restore_wallet_field_background"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginRight="@dimen/layout_margin_left"
                    android:paddingLeft="@dimen/padding_left"
                    android:textSize="@dimen/text_size"
                    android:inputType="text"
                    android:hint="@string/enter_word_4th_from_mnemonics"
                    android:maxLines="1"
            />

            <TextView
                    android:id="@+id/tv_second_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin_small"
                    android:paddingLeft="@dimen/padding_left"
            />

            <EditText
                    android:id="@+id/et_word_no_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/restore_wallet_field_background"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginRight="@dimen/layout_margin_left"
                    android:paddingStart="@dimen/padding_left"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textSize="@dimen/text_size"
                    android:hint="@string/enter_word_8th_from_mnemonics"
                    android:maxLines="1"

            />

            <TextView
                    android:id="@+id/tv_third_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginStart="@dimen/layout_margin_left"
                    android:layout_marginBottom="@dimen/layout_margin_small"
                    android:paddingStart="@dimen/padding_left"
                    tools:ignore="RtlSymmetry"/>

            <EditText
                    android:id="@+id/et_word_no_12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/restore_wallet_field_background"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginRight="@dimen/layout_margin_left"
                    android:layout_marginBottom="@dimen/layout_margin_top_large"
                    android:paddingStart="@dimen/padding_left"
                    android:textSize="@dimen/text_size"
                    android:inputType="text"
                    android:hint="@string/enter_word_12th_from_mnemonics"
                    android:maxLines="1"
            />


            <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/whiteColor"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/layout_margin_top_large"
                    android:background="@drawable/login_btn_background"

            />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/boottombar"/>
</LinearLayout>